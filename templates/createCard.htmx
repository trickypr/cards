{{ define "title" }}Create Card{{ end }}

{{ define "main" }}
  <h1>Create Card</h1>

  <form action="/decks/{{ .ID }}" method="post">
    <div>
      <label for="One">Side one:</label>
      <input type="text" name="One" id="One" />
    </div>

    <div>
      <label for="Two">Side two:</label>
      <input type="text" name="Two" id="Two" />
    </div>

    <footer><button type="submit" class="grow">Create</button></footer>
  </form>
{{ end }}
